<script>
getPrice = function(el) {
  //console.log(el.parentElement.parentElement.id);
  var numVal1 = Number(document.getElementById(el.parentElement.parentElement.id).querySelector(".price").value);
  var numVal2 = Number(document.getElementById(el.parentElement.parentElement.id).querySelector(".discount").value) / 100;
  var totalValue = numVal1 - (numVal1 * numVal2)
document.getElementById(el.parentElement.parentElement.id).querySelector(".total").value = totalValue.toFixed(2);
}
</script>
